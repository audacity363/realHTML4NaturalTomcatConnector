<?xml version="1.0" encoding="UTF-8"?>

<!--
Dynamic extension of editor.xml file.
-->

<controllibrary>
  <editor>

  <!--
  *****************************************************************************
  * DATATYPEs
  *****************************************************************************
  -->


  <!--
  *****************************************************************************
  * TAGs
  *****************************************************************************
  -->

  <!-- DEMOINFOAREA -->
  <tag name="demoinfoarea">
    <attribute name="width" datatype="width"/>
    <attribute name="height" datatype="height"/>
    <attribute name="areastyle" datatype="style"/>
    <taginstance>
      <rowtable0 height="$height$" tablestyle="$areastyle$" fixlayout="true">
          <itr>
              <icon image="/HTMLBasedGUI/images/helpicon.gif" title="Show Description" method="onDisplayDemoDescription">
              </icon>
              <hdist>
              </hdist>
              <icon image="/HTMLBasedGUI/images/xmlendnode.gif" title="Show XML Layout" method="onDisplayDemoXMLLayout">
              </icon>
              <hdist>
              </hdist>
              <icon image="/HTMLBasedGUI/images/java.gif" title="Show Adapter Code" method="onDisplayDemoAdapterCode">
              </icon>
          </itr>
          <vdist height="10">
          </vdist>
          <rowdynavis height="100%" valueprop="isDemoDescriptionVisible">
              <itr width="100%" height="100%">
                  <ihtml width="100%" height="100%" valign="top" valueprop="demoDescription">
                  </ihtml>
              </itr>
          </rowdynavis>
          <rowdynavis height="100%" valueprop="isDemoXMLLayoutVisible">
              <itr width="100%" height="100%">
                  <text width="100%" height="100%" displayonly="true" valueprop="demoXMLLayout" wrap="off">
                  </text>
              </itr>
          </rowdynavis>
          <rowdynavis height="100%" valueprop="isDemoAdapterCodeVisible">
              <itr width="100%" height="100%">
                  <text width="100%" height="100%" displayonly="true" valueprop="demoAdapterCode" wrap="off">
                  </text>
              </itr>
          </rowdynavis>
      </rowtable0>
    </taginstance>
  </tag>
  <tagsubnodeextension control="coltable0" newsubnode="demoinfoarea"/>


  </editor>
</controllibrary>