                        <repeat>
                            <str valueprop="selected">
                                <checkbox valueprop="selected" flush="screen">
                                </checkbox>
                                <field valueprop="control" width="100%" noborder="true" transparentbackground="true">
                                </field>
                            </str>
                        </repeat>
                    </rowtablearea2>
                    <itr height="50%" width="100%">
                        <hdist width="50%">
                        </hdist>
                        <icon image="../HTMLBasedGUI/images/new.gif" method="onSubnodeExtensionAdd" titletextid="icon.label.add">
                        </icon>
                        <hdist width="5">
                        </hdist>
                        <icon image="../HTMLBasedGUI/images/remove.gif" method="onSubnodeExtensionRemove" titletextid="icon.label.remove">
                        </icon>
                        <hdist width="50%">
                        </hdist>
                    </itr>
                </rowarea>
                <vdist height="5">
                </vdist>
                <rowarea textid="reetp.rowarea3">
                    <rowtablearea2 griddataprop="subNodes" rowcount="2" width="100%" withborder="true" hscroll="true">
                        <tr>
                            <label textid="reetp.label7" asheadline="true" height="15">
                            </label>
                            <label textid="label.control" asheadline="true" height="15" labelstyle="padding-top: 1px;padding-left: 2px; font-size: 10px; font-weight: bold">
                            </label>
                        </tr>
                        <repeat>
                            <str valueprop="selected">
                                <checkbox valueprop="selected" flush="screen">
                                </checkbox>
                                <field valueprop="control" width="100%" noborder="true" transparentbackground="true">
                                </field>
                            </str>
                        </repeat>
                    </rowtablearea2>
                    <itr>
                        <hdist width="50%">
                        </hdist>
                        <icon image="../HTMLBasedGUI/images/new.gif" method="onSubnodeAdd" titletextid="icon.label.add">
                        </icon>
                        <hdist width="5">
                        </hdist>
                        <icon image="../HTMLBasedGUI/images/remove.gif" method="onSubnodeRemove" titletextid="icon.label.remove">
                        </icon>
                        <hdist width="50%">
                        </hdist>
                    </itr>
                </rowarea>
            </coltable0>
            <hdist width="5">
            </hdist>
            <coldynavis valueprop="helpAreaVis" width="250" takefullheight="true">
