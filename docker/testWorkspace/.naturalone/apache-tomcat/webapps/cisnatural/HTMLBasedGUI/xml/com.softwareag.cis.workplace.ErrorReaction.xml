<?xml version="1.0" encoding="UTF-8"?>
<page model="com.softwareag.cis.workplace.ErrorReactionAdapter" pagename="ErrorReaction">
    <titlebar withclose="false">
    </titlebar>
    <pagebody horizdist="false" takefullheight="true">
        <itr height="205" valign="middle" itrstyle="background-color: #687b9c" width="100%">
            <coltable0 width="20%" takefullheight="true">
                <itr takefullwidth="true" height="100%" valign="middle">
                    <hdist width="10">
                    </hdist>
                    <icon image="/HTMLBasedGUI/images/secure_error_icon.gif">
                    </icon>
                </itr>
            </coltable0>
            <coltable0 width="65%" takefullheight="true">
                <vdist height="40">
                </vdist>
                <itr takefullwidth="true">
                    <hdist width="10">
                    </hdist>
                    <label name="ERROR" width="100%" asplaintext="true" labelstyle="font-size:24;font-weight:bold;color:#FFFFFF">
                    </label>
                </itr>
                <itr takefullwidth="true">
                    <hdist width="10">
                    </hdist>
                    <label name="We are sorry, an internal error occurred - please contact your application vendor." width="100%" asplaintext="true" labelstyle="font-size:12;font-weight:bold;color:#FFFFFF">
                    </label>
                </itr>
                <vdist height="35">
                </vdist>
            </coltable0>
            <coltable0 width="15%" takefullheight="true">
                <vdist height="12">
                </vdist>
                <itr takefullwidth="true">
                    <button textid="btn_exit" method="endProcess" width="80" height="25" textstyle="font-weight: bold">
                    </button>
                    <hdist width="15">
                    </hdist>
                </itr>
            </coltable0>
        </itr>
        <vdist height="20">
        </vdist>
        <itr height="100%" width="100%%">
            <hdist width="10">
            </hdist>
            <text valueprop="stackTrace" width="100%" height="100%" textareastyle="border: 0px solid">
            </text>
        </itr>
    </pagebody>
</page>
