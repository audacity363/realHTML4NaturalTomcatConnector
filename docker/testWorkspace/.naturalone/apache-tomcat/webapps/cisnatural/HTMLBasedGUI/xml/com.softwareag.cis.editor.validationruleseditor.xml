<?xml version="1.0" encoding="UTF-8"?>
<page model="com.softwareag.cis.editor.ValidationRulesEditorAdapter" translationreference="editor">
    <pagebody>
        <rowarea>
            <itr>
                <label textid="revre.label0" asplaintext="true">
                </label>
            </itr>
            <itr takefullwidth="true">
                <textgridsss2 griddataprop="validationRules" rowcount="5" width="100%" selectprop="selected" singleselect="true" withtitlerow="false">
                    <column property="validationRuleMsg" width="100%" textstyleprop="textStyle" convertspaces="true">
                    </column>
                </textgridsss2>
                <hdist width="10">
                </hdist>
                <coltable0 width="100" takefullheight="true">
                    <itr>
                        <button textid="revre.button0" method="onAddRules" width="75">
                        </button>
                    </itr>
                    <itr>
                        <button textid="revre.button1" method="onModifyRule" width="75">
                        </button>
                    </itr>
                    <itr>
                        <button textid="revre.button2" method="onRemoveRule" width="75">
                        </button>
                    </itr>
                </coltable0>
            </itr>
            <vdist height="5">
            </vdist>
            <itr>
                <label textid="revre.label1">
                </label>
                <hdist width="8">
                </hdist>
                <field valueprop="event" width="250" popupmethod="openIdValueCombo" popupinputonly="true">
                </field>
            </itr>
            <vdist height="5">
            </vdist>
            <itr>
                <hdist width="146">
                </hdist>
                <button textid="revre.button3" method="onOk" width="75">
                </button>
                <hdist width="5">
                </hdist>
                <button textid="revre.button4" method="onCancel" width="75">
                </button>
            </itr>
        </rowarea>
        <rowdynavis valueprop="showrulesdetail">
            <rowarea foldable="false">
                <itr>
                    <label textid="revre.label2" asplaintext="true">
                    </label>
                </itr>
                <itr>
                    <coltable0 width="100%">
                        <rowtablearea2 griddataprop="rulescontent" rowcount="5" width="100%" firstrowcolwidths="false">
                            <repeat>
                                <str valueprop="selected">
                                    <selector valueprop="selected" width="25">
                                    </selector>
                                    <field valueprop="leftoperand" width="30%" noborder="true" popupmethod="openIdValueCombo" popupinputonly="true">
                                    </field>
                                    <field valueprop="condition" width="40%" noborder="true" popupmethod="openIdValueCombo" popupinputonly="true">
                                    </field>
                                    <field valueprop="rigthoperand" width="30%" noborder="true">
                                    </field>
                                    <field valueprop="joincondition" width="87" noborder="true" popupmethod="openIdValueCombo" popupinputonly="true">
                                    </field>
                                </str>
                            </repeat>
                        </rowtablearea2>
                        <itr>
                            <label textid="revre.label3" asplaintext="true">
                            </label>
                        </itr>
                        <vdist height="5">
                        </vdist>
                        <itr takefullwidth="true">
                            <label textid="revre.label4" width="70" asplaintext="true" align="left" valign="top">
                            </label>
                            <hdist width="5">
                            </hdist>
                            <text valueprop="message" width="100%" rows="2">
                            </text>
                        </itr>
                        <vdist height="5">
                        </vdist>
                        <itr takefullwidth="true">
                            <label textid="revre.label12" width="70" asplaintext="true" align="left" valign="top" nowrap="false">
                            </label>
                            <hdist width="5">
                            </hdist>
                            <field valueprop="messageTextId">
                            </field>
                        </itr>
                        <vdist height="5">
                        </vdist>
                        <itr>
                            <coldynavis valueprop="showtransalationref" width="100%" takefullheight="true">
                                <tr>
                                    <label textid="revre.label13" width="70" asplaintext="true">
                                    </label>
                                    <hdist width="5">
                                    </hdist>
                                    <field valueprop="translationReference">
                                    </field>
                                </tr>
                            </coldynavis>
                        </itr>
                        <vdist height="5">
                        </vdist>
                        <itr takefullwidth="true">
                            <hdist width="100%">
                            </hdist>
                            <button textid="revre.button5" method="onOkLine" width="75">
                            </button>
                            <hdist width="5">
                            </hdist>
                            <button textid="revre.button6" method="onCancelLine" width="75">
                            </button>
                        </itr>
                        <vdist height="5">
                        </vdist>
                    </coltable0>
                    <hdist width="10">
                    </hdist>
                    <coltable0>
                        <itr>
                            <button textid="revre.button7" method="onAddLine" visibleprop="addSelectable" invisiblemode="disabled" width="75">
                            </button>
                        </itr>
                        <vdist height="5">
                        </vdist>
                        <itr>
                            <button textid="revre.button8" method="onDeleteLine" width="75">
                            </button>
                        </itr>
                    </coltable0>
                </itr>
            </rowarea>
        </rowdynavis>
    </pagebody>
    <statusbar withdistance="false">
    </statusbar>
</page>
