<?xml version="1.0" encoding="UTF-8"?>
<page model="com.softwareag.cis.editor.StyleSheetCreatorConfigAdapter" stylesheetfile="../cis/styles/CIS_DEFAULT.css" popupwidth="550" popupheight="400" pagename="CIS_EDIT">
    <header>
        <button textid="configSave" method="onOK" image="../HTMLBasedGUI/images/save.gif">
        </button>
    </header>
    <pagebody horizdist="false" takefullheight="true">
        <itr height="22" fixlayout="true" width="100%">
            <label textid="configConfigFile" width="100%" asheadline="true" labelstyle="padding-left: 2px; font-size: 10px; font-weight: bold">
            </label>
        </itr>
        <vdist height="5">
        </vdist>
        <itr width="100%">
            <hdist width="5">
            </hdist>
            <coltable0 width="100%">
                <rowarea textid="scconfig.rowarea.location" withtoppadding="false">
                    <itr>
                        <label textid="configName" width="100">
                        </label>
                        <textout valueprop="fileName" width="400">
                        </textout>
                    </itr>
                    <itr>
                        <label textid="configDir" width="100">
                        </label>
                        <field valueprop="project" width="100%" displayonly="true">
                        </field>
                    </itr>
                </rowarea>
                <vdist height="5">
                </vdist>
            </coltable0>
            <hdist width="5">
            </hdist>
        </itr>
        <itr height="22" fixlayout="true" width="100%">
            <label textid="scconfig.stylesheetdir" width="100%" asheadline="true" labelstyle="padding-left: 2px; font-size: 10px; font-weight: bold">
            </label>
        </itr>
        <vdist height="5">
        </vdist>
        <itr height="100%" width="100%">
            <hdist width="5">
            </hdist>
            <coltable0 width="100%" takefullheight="true">
                <rowarea textid="scconfig.rowareadirectories" height="100%" withtoppadding="false">
                    <itr>
                        <label textid="scconfig.label.stylesheetdir" width="100%" asplaintext="true">
                        </label>
                    </itr>
                    <vdist>
                    </vdist>
                    <itr>
                        <label textid="scconfig.label.keeptstylesheets" width="100%" asplaintext="true">
                        </label>
                    </itr>
                    <vdist height="10">
                    </vdist>
                    <itr>
                        <label textid="scconfig.label.ownstylesheetskept" width="240" asplaintext="true">
                        </label>
                        <radiobutton valueprop="styleSheetDir" value="DEFAULT" flush="server">
                        </radiobutton>
                        <hdist>
                        </hdist>
                        <label textid="scconfig.label.defaultlocation" asplaintext="true">
                        </label>
                    </itr>
                    <vdist height="10">
                    </vdist>
                    <itr>
                        <hdist width="240">
                        </hdist>
                        <radiobutton valueprop="styleSheetDir" value="RELATIVE" flush="server">
                        </radiobutton>
                        <hdist>
                        </hdist>
                        <label textid="scconfig.label.withinwebapp" width="100%" asplaintext="true">
                        </label>
                        <hdist width="10">
                        </hdist>
                    </itr>
                    <itr>
                        <hdist width="263">
                        </hdist>
                        <field valueprop="styleSheetDirectory" width="300" statusprop="styleSheetDirectoryStatus">
                        </field>
                        <hdist width="10">
                        </hdist>
                    </itr>
                    <itr>
                        <hdist width="263">
                        </hdist>
                        <label textid="scconfig.label.inputdirname" asplaintext="true">
                        </label>
                    </itr>
                    <vdist height="10">
                    </vdist>
                    <itr>
                        <hdist width="240">
                        </hdist>
                        <radiobutton valueprop="styleSheetDir" value="ABSOLUTE" flush="server">
                        </radiobutton>
                        <hdist>
                        </hdist>
                        <label textid="scconfig.label.outsidewebapp" width="100%" asplaintext="true">
                        </label>
                        <hdist width="10">
                        </hdist>
                    </itr>
                    <itr>
                        <hdist width="263">
                        </hdist>
                        <field valueprop="styleSheetDirectory2" width="100%" statusprop="styleSheetDirectoryStatus2">
                        </field>
                        <hdist width="10">
                        </hdist>
                    </itr>
                    <vdist>
                    </vdist>
                    <itr>
                        <hdist width="263">
                        </hdist>
                        <label textid="scconfig.label.inputdirchoice" asplaintext="true">
                        </label>
                    </itr>
                    <vdist>
                    </vdist>
                    <itr>
                        <hdist width="263">
                        </hdist>
                        <label textid="scconfig.label.pleasenote" asplaintext="true">
                        </label>
                    </itr>
                </rowarea>
                <vdist height="5">
                </vdist>
            </coltable0>
            <hdist width="5">
            </hdist>
        </itr>
        <vdist height="100%">
        </vdist>
    </pagebody>
    <statusbar withdistance="false">
    </statusbar>
</page>
