<?xml version="1.0" encoding="UTF-8"?>
<page model="com.softwareag.cis.admin.ServerLogAdapter" translationreference="CIS_ADMIN" popupwidth="1000" popupheight="800">
    <pagebody takefullheight="true">
        <rowarea textid="tab.info">
            <itr takefullwidth="true">
                <hdist width="20">
                </hdist>
                <label textid="label.fileName" width="120">
                </label>
                <field valueprop="fileName" width="100%" displayonly="true">
                </field>
            </itr>
            <itr takefullwidth="true">
                <hdist width="20">
                </hdist>
                <label textid="label.directoryname" width="120">
                </label>
                <text valueprop="directoryName" width="100%" displayonly="true" rows="1">
                </text>
            </itr>
            <itr>
                <hdist width="20">
                </hdist>
                <label textid="servlog.label0" width="120">
                </label>
                <radiobutton valueprop="debugMode" value="false" flush="server">
                </radiobutton>
                <label textid="lblDebugModeFalse" asplaintext="true">
                </label>
            </itr>
            <itr>
                <hdist width="140">
                </hdist>
                <radiobutton valueprop="debugMode" value="true" flush="server">
                </radiobutton>
                <label textid="lblDebugModeTrue" asplaintext="true">
                </label>
            </itr>
            <itr>
                <hdist width="20">
                </hdist>
                <label textid="secondspart1" width="120">
                </label>
                <hdist>
                </hdist>
                <field valueprop="seconds" width="50" fieldstyle="text-align: right" datatype="int">
                </field>
                <hdist>
                </hdist>
                <label textid="secondspart2" asplaintext="true">
                </label>
                <hdist width="20">
                </hdist>
                <button textid="serverlog.button.refresh" method="onRefresh" image="../HTMLBasedGUI/images/refresh.gif">
                </button>
                <hdist>
                </hdist>
                <button textid="serverlog.button.clear" method="onClear" image="../HTMLBasedGUI/images/remove.gif">
                </button>
                <hdist>
                </hdist>
            </itr>
        </rowarea>
        <rowarea textid="rowarea.file" height="100%">
            <itr height="100%" fixlayout="true" width="100%">
                <text valueprop="logText" width="100%" height="100%" wrap="off" scroll="scroll">
                </text>
            </itr>
        </rowarea>
        <vdist>
        </vdist>
    </pagebody>
</page>
